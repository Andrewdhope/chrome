{
  "name": "Salary Summary",
  "version": "1",
  "description": "Display NBA player contract summary.",
 
  "icons": {
     "16": "images/money_bag16.png",
     "32": "images/money_bag32.png",
    "128": "images/get_started128.png"
  },
  
  "permissions": ["storage",
    "https://www.basketball-reference.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "SalarySearch.html",
    "default_icon": {
        "16": "images/money_bag16.png",
        "32": "images/money_bag32.png",
        "128": "images/get_started128.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
        "suggested_key": {
            "default": "Ctrl+Shift+4",
            "mac": "MacCtrl+Shift+4"
        }
    }
  },
  "manifest_version": 2
}